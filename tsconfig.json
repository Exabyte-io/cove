{
  "compilerOptions": {
    "target": "es2018",
    "jsx": "react",
    "module": "esNext",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "noEmitOnError": false,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules"
  ]
}
